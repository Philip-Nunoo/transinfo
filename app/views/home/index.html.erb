				new Highcharts.Chart({
					chart: { renderTo: 'congestion_chart_'+i, type: 'areaspline' },
					title: { text: 'Congestion chart From Accra to Circle' },
					xAxis: { type: 'per hour' },
					yAxis: {
						title: { text: 'rate' }
					},
					series: [{
						pointInterval: <%= 1.hour * 1000 %>,
						pointStart: <%= 3.weeks.ago.at_midnight.to_i * 1000 %>,
						data: [1, 2, 5, 7, 3]
					}]
				});
			});
		});
	})	
</script>
